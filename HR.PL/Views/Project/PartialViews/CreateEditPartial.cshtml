@model Project
@{
    var departments = new SelectList(ViewBag.Departments, "Id", "Name");
}

<div asp-validation-summary="All"></div>

<div class="form-group">
    <label class="col-form-label" asp-for="Name"></label>
    <input class="form-control" asp-for="Name"></input>
    <span asp-validation-for="Name" class="text-danger"></span>
</div>

<br />
<div class="form-group">
    <label class="col-form-label" asp-for="Department"></label>
    <select class="form-control" asp-items="@departments" asp-for="DepartmentId">
        <option value="@null">------Select Department------</option>
    </select>
</div>

