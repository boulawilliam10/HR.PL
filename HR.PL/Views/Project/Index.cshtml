@model IEnumerable<Project>
@{
    ViewData["Title"] = "Index";
}

<h1>All Project</h1>
<br />
<br />
<a asp-controller="Project" asp-action="Create" class="btn btn-primary">Create New Project</a>
<br />
<br />
@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(P => P.Id)</th>
                <th>@Html.DisplayNameFor(P => P.Name)</th>
                <th>@Html.DisplayNameFor(P => P.Department)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var project in Model)
            {
                <tr>
                    <td>@project.Id</td>
                    <td>@project.Name</td>
                    <td>@project.Department.Name</td>
                    <partial name="_ButtonsPartialView" model="@project.Id.ToString()" />

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>There Is No Projects</h3>
    </div>
}
